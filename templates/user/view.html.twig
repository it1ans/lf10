{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="gradient-profile">
                            <img src="{{ asset('img/download.png') }}" alt="User profile picture"
                                 class="user-profile-image">
                        </div>
                        <h3>{{ user.name }}</h3>
                        <p class="text-body-secondary">Account-Type: <strong>Administrator</strong></p>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-body">

                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center">{{ user.name }}</h3>
                        <hr>
                        <div class="row">
                            <div class="col fw-bold">Email</div>
                            <div class="col">{{ user.email }}</div>
                        </div>
                        <div class="row">
                            <div class="col fw-bold">Height</div>
                            <div class="col">{{ user.height ?? 'Undefined' }}</div>
                        </div>
                        <div class="row">
                            <div class="col fw-bold">Age</div>
                            <div class="col">{{ user.age ?? 'Undefined' }}</div>
                        </div>
                        <div class="row">
                            <div class="col fw-bold">Weight</div>
                            <div class="col">{{ user.weight ?? 'Undefined' }}</div>
                        </div>
                        <div class="row">
                            <div class="col fw-bold">Gender</div>
                            <div class="col">{{ user.Gender ? user.Gender.value|capitalize : 'Undefined' }}</div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-body">

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}