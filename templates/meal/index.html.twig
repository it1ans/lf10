{% extends 'base.html.twig' %}

{% block title %}Meal index
{% endblock %}

{% block body %}
	<div class="container mt-3">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-body">

						<h1>Meal index</h1>

						<table class="table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Name</th>
									<th>Calories</th>
									<th>Public</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for meal in meals %}
									<tr>
										<td>{{ meal.id }}</td>
										<td>{{ meal.name }}</td>
										<td>{{ meal.calories }}</td>
										<td>{{ meal.public ? 'Yes' : 'No' }}</td>
										<td>
											<a href="{{ path('app_meal_show', {'id': meal.id}) }}" class="btn btn-outline-secondary">show</a>
											<a href="{{ path('app_meal_edit', {'id': meal.id}) }}" class="btn btn-outline-secondary">edit</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="5">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>

						<a href="{{ path('app_meal_new') }}" class="btn btn-outline-primary">Create new</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
